<?xml version="1.0" encoding="UTF-8"?>

<?import org.controlsfx.control.StatusBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StatusBar fx:id="statusBar" xmlns="http://javafx.com/javafx/8.0.40"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dynami.ui.status.StatusController">
	<leftItems>
		<Label fx:id="messageType" style="-fx-alignment: CENTER-LEFT;"/>
	</leftItems>
	<rightItems>
		<Button onAction="#displayErrors">
			<graphic>
				<ImageView>
					<image>
						<Image url="icons/_error.gif" />
					</image>
				</ImageView>
			</graphic>
		</Button>
	</rightItems>
</StatusBar>
