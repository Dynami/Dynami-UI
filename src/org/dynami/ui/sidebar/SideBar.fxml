<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<ToolBar 
	fx:id="sideBar"
	orientation="VERTICAL"
	xmlns="http://javafx.com/javafx/8.0.40"
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="org.dynami.ui.sidebar.SideBarController">
	<items>
		<Button fx:id="chartButton" mnemonicParsing="false">
			<graphic>
				<ImageView>
					<image>
						<Image url="icons/_chart.gif" />
					</image>
				</ImageView>
			</graphic>
		</Button>
		<Button fx:id="ordersButton" mnemonicParsing="false">
			<graphic>
				<ImageView>
					<image>
						<Image url="icons/_orders.gif" />
					</image>
				</ImageView>
			</graphic>
		</Button>
		<Button mnemonicParsing="false" onAction="#showClosedPositions">
			<tooltip>
				<Tooltip text="Show closed positions"/>
			</tooltip>
			<graphic>
				<ImageView>
					<image>
						<Image url="icons/_closed.gif" />
					</image>
				</ImageView>
			</graphic>
		</Button>
		<Button mnemonicParsing="false" onAction="#showTraces">
			<tooltip>
				<Tooltip text="Show strategy traces"/>
			</tooltip>
			<graphic>
				<ImageView>
					<image>
						<Image url="icons/_traces.gif" />
					</image>
				</ImageView>
			</graphic>
		</Button>
	</items>
</ToolBar>
